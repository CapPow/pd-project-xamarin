<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:HelloGPS"
             x:Class="HelloGPS.MainPage">

    <StackLayout>
        <!-- Place new controls here -->
    	<Label x:Name="lblTitle" Text="Hello GPS" 
           HorizontalOptions="Center"
           VerticalOptions="CenterAndExpand" />
        <Button x:Name="btnGPS" Clicked="OnGPSClick" Text="Get GPS"
                HorizontalOptions="Center"
           VerticalOptions="CenterAndExpand"/>
        <Label x:Name="lblGPS" Text="Current Location: "
                HorizontalOptions="Center" 
           VerticalOptions="CenterAndExpand"/>
        <Button x:Name="btnExport" Text="Export Data to CSV"
                Clicked="OnCSVClick" HorizontalOptions="Center" 
           VerticalOptions="CenterAndExpand"/>
    </StackLayout>

</ContentPage>
