<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:control="clr-namespace:collnotes.Custom"
    x:Class="collnotes.ExportProject"
    Title="Export Project"
    Style="{StaticResource AltCPStyle}">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Orientation="Vertical">
                <Label Text="Choose a Project:"
                       Style="{StaticResource LBLStyle}"/>
                <control:CustomPicker
                    x:Name="pickerExportProject"
                    Style="{StaticResource PickerStyle}"
                    Title="Select Project" 
                    SelectedIndexChanged="ExportProject_SelectedIndexChanged"/>
                <Button x:Name="ExportProjectCSV"
                        Style="{StaticResource EBTNStyle}"
                        Text="Export Project Data"
                        Clicked="ExportProjectCSV_Clicked"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
