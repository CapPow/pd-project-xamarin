<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SkeletonGPS.GPSPage">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="lblGPS" Text="Current Location"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Button x:Name="btnGPS" Text="Get Current Location"
                    VerticalOptions="CenterAndExpand"
                    HorizontalOptions="CenterAndExpand"
                    Clicked="OnClick_GPS"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>